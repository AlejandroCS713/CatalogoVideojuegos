    "components": {
        "schemas": {
            "UserLite": {
                "title": "User Lite Information",
                "description": "Información básica del usuario",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "Nombre Usuario"
                    }
                },
                "type": "object"
            },
            "VideojuegoConRol": {
                "title": "Videojuego con Rol",
                "description": "Información del videojuego asociado a un foro y su rol",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "nombre": {
                        "type": "string",
                        "example": "Nombre del Videojuego"
                    },
                    "imagen_url": {
                        "type": "string",
                        "format": "url",
                        "example": "http://example.com/image.jpg",
                        "nullable": true
                    },
                    "rol_en_foro": {
                        "type": "string",
                        "enum": [
                            "principal",
                            "secundario",
                            "opcional"
                        ],
                        "example": "principal"
                    }
                },
                "type": "object"
            },
            "RespuestaForo": {
                "title": "Respuesta de Mensaje de Foro",
                "description": "Representación de una respuesta a un mensaje de foro",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 101
                    },
                    "contenido": {
                        "type": "string",
                        "example": "Esta es una respuesta."
                    },
                    "usuario": {
                        "$ref": "#/components/schemas/UserLite"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-06-04T10:30:00.000000Z"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-06-04T10:35:00.000000Z"
                    }
                },
                "type": "object"
            },
            "MensajeForo": {
                "title": "Mensaje de Foro",
                "description": "Representación de un mensaje dentro de un foro",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 10
                    },
                    "contenido": {
                        "type": "string",
                        "example": "Contenido del mensaje principal."
                    },
                    "usuario": {
                        "$ref": "#/components/schemas/UserLite"
                    },
                    "respuestas": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/RespuestaForo"
                        }
